{
    "connections": [
        {
            "port": 8080,
             "labels": [
                 "api",
                 "http"
             ]
        },
        {
            "port": 8443,
            "labels": [
                "api",
                "https"
            ]
        },
        {
            "port": 8999,
            "labels": [
                "admin"
            ]
        }
    ],
    "plugins": {
        "heavy": {
            "maxHeapUsedBytes": 1073741824,
            "maxRssBytes": 2147483648,
            "sampleInterval": 1000,
            "maxEventLoopDelay": 5000
        },
        "good": {
            "reporters": [{
                "reporter": "good-console",
                "args": [{ "request": "*", "ops": "*", "log": "*", "error": "*" }]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/", { "request": "*" }, { "fileName": "request.log" }
                ]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/", { "ops": "*" }, { "fileName": "ops.log" }
                ]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/", { "log": "*" }, { "fileName": "log.log" }
                ]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/", { "error": "*" }, { "fileName": "error.log" }
                ]
            }],
            "opsInterval": 5000,
            "logRequestHeaders": true
        },
        "gills": {},
        "lout": {}
    }
}
