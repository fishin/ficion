{
    "connections": [
        {
            "port": 8080,
            "routes": {
                "timeout": {
                    "server": 10000
                }
            },
            "load": {
                "maxHeapUsedBytes": 1073741824,
                "maxRssBytes": 2147483648,
                "maxEventLoopDelay": 5000
            },
            "labels": [
                "api",
                "http"
            ]
        },
        {
            "port": 8999,
            "routes": {
                "timeout": {
                    "server": 10000
                }
            },
            "load": {
                "maxHeapUsedBytes": 1073741824,
                "maxRssBytes": 2147483648,
                "maxEventLoopDelay": 5000
            },
            "labels": [
                "admin"
            ]
        }
    ],
    "server": {
        "load": {
            "sampleInterval": 1000
        }
    },
    "plugins": {
        "good": {
            "opsInterval": 5000,
            "logRequestHeaders": true,
            "reporters": [{
                "reporter": "good-console",
                "args": [{ "response": "*", "ops": "*", "log": "*", "error": "*" }]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/response.log",
                    { "response": "*" }
                ]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/ops.log",
                    { "ops": "*" }
                ]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/log.log",
                    { "log": "*" }
                ]
            },
            {
                "reporter": "good-file",
                "args": [
                    "/tmp/ficion/log/error.log",
                    { "error": "*" }
                ]
            }]
        },
        "gills": {},
        "lout": {}
    }
}
